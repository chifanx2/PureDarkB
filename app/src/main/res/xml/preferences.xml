<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="pref_proxy_settings"
        android:title="HProxy 设置">

        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_proxy_enabled"
            android:summary="关于 HProxy 的信息请参阅应用主页"
            android:title="启用 HProxy" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_proxy_request"
            android:summary="在获取相册列表时使用 HProxy"
            android:title="普通请求" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_proxy_picture"
            android:summary="在下载图片时使用 HProxy"
            android:title="图片" />

        <EditTextPreference
            android:defaultValue=""
            android:key="pref_proxy_server"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="更改 HProxy 服务器" />


    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_about"
        android:title="关于">

        <Preference
            android:key="pref_about_upgrade"
            android:title="检查更新" />

        <Preference
            android:key="pref_about_license"
            android:title="开源协议" />
        <Preference
            android:key="pref_about_about"
            android:title="关于 H-Viewer" />
    </PreferenceCategory>

</PreferenceScreen>