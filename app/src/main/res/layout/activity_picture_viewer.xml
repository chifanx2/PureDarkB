<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.puredark.lessonlearningplus.customs.ExViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_90"
                app:pagerCurrItem="0"
                app:pagerLayout1="@layout/view_picture_viewer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/uni_padding"
                android:paddingBottom="@dimen/uni_padding"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:background="@color/black_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    tools:text="10/12"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
